{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "wind": ["components/index.tsx"],
      "@/src/*": ["components/*"]
    },
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
